﻿
@page "/chat/{senderId:long}/{receiverId:long}"
@using Microsoft.AspNetCore.Components
@inject NavigationManager NavigationManager

<h1>Chat with @ReceiverName</h1>

<p>This is where the chat interface would go.</p>

@code {
    [Parameter]
    public long SenderId { get; set; }

    [Parameter]
    public long ReceiverId { get; set; }

    private string ReceiverName { get; set; } = "User"; // placeholder

    protected override void OnInitialized()
    {
        //name here instead of user id
        ReceiverName = $"User ID: {ReceiverId}";
    }
}