@page "/events"
@using DDD_work.Data
@inject WeatherForecastService ForecastService

<PageTitle>Events</PageTitle>

<h1>Events</h1>

<p>This is where we'll show some cool events.</p>

@if (forecasts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Event Title</th>
                <th>Location</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var eventItem in forecasts)
            {
                <tr>
                    <td>@eventItem.Date.ToShortDateString()</td>
                    <td>Event Name Placeholder</td>
                    <td>Event Location Placeholder</td>
                    <td>@eventItem.Summary</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private WeatherForecast[]? forecasts;

    protected override async Task OnInitializedAsync()
    {
        forecasts = await ForecastService.GetForecastAsync(DateOnly.FromDateTime(DateTime.Now));
    }
}