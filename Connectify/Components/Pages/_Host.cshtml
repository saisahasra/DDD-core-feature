@page "/"
@using Microsoft.AspNetCore.Components.Web
@using ConnectifyApp
@using ConnectifyApp.Components
@namespace ConnectifyApp.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ConnectifyApp</title>
    <base href="/" />
    <link rel="stylesheet" href="bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="ConnectifyApp.styles.css" rel="stylesheet" />
    <link rel="icon" type="image/png" href="favicon.png" />
    <HeadOutlet />
</head>
<body>
    <component type="typeof(ConnectifyApp.Components.App)" render-mode="ServerPrerendered" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
            <a href="" class="reload">Reload</a>
            <a class="dismiss">Dismiss</a>
        </environment>
    </div>

    <script src="_framework/blazor.server.js"></script>
</body>
</html>